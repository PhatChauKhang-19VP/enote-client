<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.media.MediaView?>

<AnchorPane pickOnBounds="false" prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pck.enote.controller.views.MediaViewController">
    <MediaView fx:id="mvVideo" fitHeight="320.0" fitWidth="480.0" layoutX="10.0">
        <viewport>
            <Rectangle2D />
        </viewport>
    </MediaView>
    <Button fx:id="btnPlay" layoutX="215.0" layoutY="330.0" mnemonicParsing="false" onAction="#play" pickOnBounds="false" prefWidth="70.0" text="Play" />
    <Button fx:id="btnPause" layoutX="120.0" layoutY="330.0" mnemonicParsing="false" onAction="#pause" pickOnBounds="false" prefWidth="70.0" text="Pause" />
    <Button fx:id="btnReset" layoutX="310.0" layoutY="330.0" mnemonicParsing="false" onAction="#reset" pickOnBounds="false" prefWidth="70.0" text="Reset" />
</AnchorPane>
