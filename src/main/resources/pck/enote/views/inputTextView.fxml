<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane pickOnBounds="false" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pck.enote.controller.views.InputTextViewController">
   <children>
      <Pane pickOnBounds="false" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label layoutX="25.0" layoutY="15.0" text="Nội dung ghi chú">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label layoutX="25.0" layoutY="60.0" prefHeight="30.0" text="Tên ghi chú">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextArea fx:id="taContent" layoutX="25.0" layoutY="100.0" pickOnBounds="false" prefHeight="250.0" prefWidth="550.0" promptText="Hãy nhập nội dung ghi chú....">
               <font>
                  <Font size="14.0" />
               </font>
            </TextArea>
            <Button fx:id="btnUploadText" layoutX="250.0" layoutY="360.0" mnemonicParsing="false" pickOnBounds="false" prefHeight="30.0" prefWidth="100.0" text="Tải ghi chú lên" onAction="#uploadText"/>
            <TextField fx:id="tfNoteName" layoutX="100.0" layoutY="60.0" prefHeight="30.0" promptText="Nhập tên ghi chú">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
         </children>
      </Pane>
   </children>
</AnchorPane>
