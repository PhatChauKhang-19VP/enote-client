<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18"
            fx:controller="pck.enote.controller.LoginPageController">
    <children>
        <Pane layoutX="100.0" layoutY="75.0" prefHeight="450.0" prefWidth="400.0">
            <children>
                <Pane layoutX="55.0" layoutY="75.0" style="-fx-background-color: #ebebeb;">
                    <children>
                        <Pane layoutY="84.0" prefHeight="110.0">
                            <children>
                                <Label layoutX="20.0" style="-fx-font-size: 20;" text="Tên đăng nhập (*)"/>
                                <ImageView fitHeight="35.0" fitWidth="35.0" layoutX="20.0" layoutY="40.0"
                                           pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="https://res.cloudinary.com/pck-group/image/upload/v1655308340/MMT/enote/images/002-user_va1jxm.png"/>
                                    </image>
                                </ImageView>
                                <TextField fx:id="usernameField" layoutX="60.0" layoutY="40.0" maxWidth="210.0"
                                           prefHeight="32.0" prefWidth="210.0" promptText="Nhập tên đăng nhập..."
                                           style="-fx-font-size: 16;"/>
                                <Label fx:id="usernameWarningField" layoutX="20.0" layoutY="80.0"
                                       style="-fx-font-size: 16;" text=""/>
                            </children>
                            <padding>
                                <Insets right="20.0"/>
                            </padding>
                        </Pane>
                        <Pane layoutY="200.0" prefHeight="110.0">
                            <children>
                                <Label layoutX="20.0" style="-fx-font-size: 20;" text="Mật khẩu (*)"/>
                                <ImageView fitHeight="35.0" fitWidth="35.0" layoutX="20.0" layoutY="40.0"
                                           pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="https://res.cloudinary.com/pck-group/image/upload/v1655308340/MMT/enote/images/001-padlock_gawcmt.png"/>
                                    </image>
                                </ImageView>
                                <PasswordField fx:id="passwordField" layoutX="60.0" layoutY="40.0" prefHeight="32.0"
                                               prefWidth="210.0" promptText="Nhập mật khẩu..."
                                               style="-fx-font-size: 16;"/>
                                <Label fx:id="passwordWarningField" layoutX="20.0" layoutY="80.0"
                                       style="-fx-font-size: 16;" text=""/>
                            </children>
                            <padding>
                                <Insets right="20.0"/>
                            </padding>
                        </Pane>
                        <Button fx:id="loginButton" layoutX="83.0" layoutY="310.0"
                                mnemonicParsing="false" style="-fx-font-size: 20;" text="Đăng nhập"
                                onAction="#onLoginButtonClicked"/>
                        <Label layoutX="72.0" layoutY="15.0" style="-fx-font-size: 30;" text="Đăng nhập"/>
                    </children>
                    <padding>
                        <Insets bottom="20.0"/>
                    </padding>
                </Pane>
                <Label layoutX="126.0" style="-fx-font-size: 48; -fx-font-weight: 700;" text="E-Note"/>
            </children>
        </Pane>
    </children>
</AnchorPane>
